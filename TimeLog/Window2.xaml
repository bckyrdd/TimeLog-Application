<Window x:Class="TimeLog.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeLog"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="600">
    <Grid Loaded="gridLoad">
        <Button x:Name="registerBtn" Content="Register" HorizontalAlignment="Left" Margin="321,40,0,0" VerticalAlignment="Top" Height="37" Width="110" FontFamily="Segoe UI Semibold" Click="registerBtn_Click"/>
        <Button x:Name="loginBtn" Content="Login" HorizontalAlignment="Left" Margin="450,40,0,0" VerticalAlignment="Top" Height="37" Width="110" FontFamily="Segoe UI Semibold" Click="loginBtn_Click"/>
        <DataGrid x:Name="timeGrid" AutoGenerateColumns="True" HorizontalAlignment="Center" Height="268" Margin="0,102,0,0" VerticalAlignment="Top" Width="524" />
        <Button x:Name="logoutBtn" Content="Logout" HorizontalAlignment="Left" Margin="38,40,0,0" VerticalAlignment="Top" Height="37" Width="110" FontFamily="Segoe UI Semibold" Click="logoutBtn_Click" Visibility="Collapsed"/>
    </Grid>
</Window>
